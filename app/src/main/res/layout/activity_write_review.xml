<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/write_review_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="군도"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/write_review_pegi15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_15"
        app:layout_constraintBottom_toTopOf="@+id/write_review_line"
        app:layout_constraintLeft_toRightOf="@id/write_review_title"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/write_review_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/borderline_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/write_review_title" />

    <TextView
        android:id="@+id/write_review_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="평점 입력 이미지"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/write_review_line" />

    <TextView
        android:id="@+id/write_review_announce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="평점을 입력해 주세요"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/write_review_star" />

    <EditText
        android:id="@+id/write_review_editview"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="30dp"
        android:gravity="start"
        android:hint="100자 이내로 작성해주세요."
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/write_review_announce" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/write_review_btn_cencel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="취 소"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/write_review_editview" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/write_review_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:text="저 장"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@id/write_review_btn_cencel"
        app:layout_constraintTop_toBottomOf="@id/write_review_editview" />


</androidx.constraintlayout.widget.ConstraintLayout>